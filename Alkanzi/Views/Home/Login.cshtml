@{
    Layout = "";
    ViewBag.Title = "login";
}

<center><h5>{{ loginCtrl.msg }}</h5></center>
<div class="row justify-content-center">
    <div class="col-4">
        <input type="text" placeholder=" user name" class="form-control" ng-model="name"/>
        <input type="password" placeholder=" user password" class="form-control" ng-model="pass"/>
        <input type="button" value="Sign in" ng-click="loginCtrl.login(name,pass)"/>
    </div>
</div>